  bottom rem(10)
  z-index 999
.swiper-pagination-bullet-active
  background gray
.swiper-pagination-bullet
  background lightgrey
.dddd
  padding rem(20) rem(0)
  border 1px solid lightgrey
  border-top none
  border-radius 0 0 rem(12) rem(12)

